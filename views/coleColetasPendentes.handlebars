<div class="card-deck p-5">

    <div class="card">
        <div class="card-body p-5">
            <h3 class="card-title text-center">Coletas Pendentes</h3>
            <div class="container my-4">
                <table class="table table-striped table-hover table-responsive-md">

                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Horário</th>
                            <th scope="col">Data</th>
                            <th scope="col">Empresa de Gerenciamento</th>
                            <th scope="col">Resíduo</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each pedidos as |pedido|}}
                        <tr>
                            <td scope="row">{{pedido.idPedido}}</td>
                            <td scope="row">{{pedido.horaPedido}}</td>
                            <td scope="row">{{pedido.dataPedido}}</td>
                            <td scope="row">{{pedido.nomeEmpAtendente}}</td>
                            <td scope="row">{{pedido.quantidadeResiduo}} {{pedido.tipoResiduo}}</td>
                            <td scope="row">
                                <form class="form-inline" method="get"
                                    action="/cliColetasAgendadas/{{pedido.idPedido}}">
                                    <button class="btn btn-outline-light" type="submit">Detalhes</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
