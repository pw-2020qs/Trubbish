                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
                    aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="nav navbar-nav">
                        {{#if (equals tipoUsuario "cliente")}}
                            <li class="nav-item"><a class="nav-link" href="/cliente">Home</a></li>
                        {{/if}}

                        {{#if (equals tipoUsuario "coletor")}}
                            <li class="nav-item"><a class="nav-link" href="/coletor">Home</a></li>
                        {{/if}}

                        {{#if (equals tipoUsuario "tratamento")}}
                            {{!-- Criar esta view --}}
                            <li class="nav-item"><a class="nav-link" href="/tratamento">Home</a></li>
                        {{/if}}

                        <li class="nav-item"><a class="nav-link" href="/alterarCadastro">Minha Conta</a>
                        </li>
