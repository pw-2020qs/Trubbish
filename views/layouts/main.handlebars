                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                {{#if (equals tipoUsuario "cliente")}}
                                    <li><a class="dropdown-item" href="/cliColetasAgendadas">Coletas Agendadas</a></li>
                                    <li><a class="dropdown-item" href="/cliHistoricoPedidos">Histórico de Pedidos</a></li>
                                    <li><a class="dropdown-item" href="/cliNovoPedido">Novo Pedido</a></li>
                                {{/if}}

                                {{#if (equals tipoUsuario "coletor")}}
                                    <li><a class="dropdown-item" href="/coleColetasPendentes">Coletas Pendentes</a></li>
                                    <li><a class="dropdown-item" href="/coleHistoricoColeta">Histórico de Coletas</a></li>
                                    <li><a class="dropdown-item" href="/coleRecursosColeta">Recursos para Coletas</a></li>
                                    <li><a class="dropdown-item" href="/coleGraficosDesempenho">Gráficos de Desempenho</a></li>
                                {{/if}}

                                {{#if (equals tipoUsuario "tratamento")}}
                                    {{!-- Corrigir os nomes dos arquivos quando forem adicionados --}}
                                    <li><a class="dropdown-item" href="entregasPendentes.html">Entregas Pendentes</a></li>
                                    <li><a class="dropdown-item" href="historicoEntregas.html">Histórico de Entregas</a></li>
                                    <li><a class="dropdown-item" href="capacidadeTratamento.html">Capacidade de Tratamento</a></li>
                                {{/if}}
                            </ul>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav ml-auto">
                        <img src="/uploads/{{fotoUsuario}}" class="rounded float-left" style="width: 55px;">
                        <li class="nav-item mr-4"><a class="nav-link" href="/alterarCadastro"><span
                                    class="fa fa-user fa-lg"></span> Nome</a></li>
                        <li class="nav-item">
                            <form class="form-inline" method="GET" action="/logout">
                                <button class="btn btn-outline-light" type="submit">Log out</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
